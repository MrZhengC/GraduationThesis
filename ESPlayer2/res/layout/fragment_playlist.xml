<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_grey"
    android:clickable="true"
    android:focusable="true" >

    <FrameLayout
        android:id="@+id/panel_playlist_cover"
        android:layout_width="match_parent"
        android:layout_height="240dp" >

        <ImageView
            android:id="@+id/iv_playlist_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_top_bg" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@color/translucence_white55" >

            <RelativeLayout
                android:id="@+id/panel_music_list_play_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical" >

                <ImageView
                    android:id="@+id/iv_music_list_play_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_music_white" />

                <TextView
                    android:id="@+id/tv_music_list_play_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_music_list_play_all"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toRightOf="@id/iv_music_list_play_all"
                    android:text="播放所有"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_music_list_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_music_list_play_all"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/iv_music_list_play_all"
                    android:text="@string/num_of_music"
                    android:textColor="@android:color/white"
                    android:textSize="13dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_music_list_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="12dp"
                android:drawableLeft="@drawable/ic_manage_white"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="管理"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/panel_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/btn_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="页面标题"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/btn_nav_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:drawableLeft="@drawable/ic_more_option_white"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_music_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/panel_playlist_cover"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:padding="4dp" />

</RelativeLayout>