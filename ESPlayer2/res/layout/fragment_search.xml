<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_grey"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/btn_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_nav_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:ems="10"
            android:layout_toLeftOf="@+id/btn_nav_search"
            android:layout_toRightOf="@id/btn_nav_back"
            android:gravity="center_vertical"
            android:hint="输入歌曲名称"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/btn_nav_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="搜索" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_search_music_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />
    
</LinearLayout>